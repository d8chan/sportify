<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:id="@+id/sport_title"
                android:hint="@string/gathering_title_hint"
                android:padding="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sport:"
                    android:id="@+id/sport_type"
                    android:paddingLeft="10dp"
                    android:layout_weight="0.5"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sport_type_spinner"
                    android:background="#f4921a"
                    android:layout_weight="0.5"/>
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:id="@+id/sport_description"
                android:layout_gravity="center_horizontal"
                android:hint="Enter a description" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:id="@+id/sport_location"
                android:layout_gravity="center_horizontal"
                android:hint="@string/hint_location" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:id="@+id/datepicker" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TIME"
                    android:id="@+id/timepicker" />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Skill Level:"
                    android:id="@+id/skill_lv"
                    android:paddingLeft="10dp"
                    android:layout_weight="0.5" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/skill_lv_spinner"
                    android:gravity="right"
                    android:background="#f4921a"
                    android:layout_weight="0.5" />
            </LinearLayout>

            <CheckBox
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:text="Private"
                android:id="@+id/sport_status"
                android:checked="false" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="submit"
                android:id="@+id/sport_submit"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
